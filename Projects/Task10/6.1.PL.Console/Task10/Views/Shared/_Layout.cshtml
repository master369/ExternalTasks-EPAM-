<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="btn-group btn-group-lg" role="group">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="~/Views/Account/Profile" class="btn btn-default">@User.Identity.Name</a>
                <a href="~/Views/Account/Logout" class="btn btn-default">Logout</a>
            }
            else
            {
                <a href="~/Views/Account/Login" class="btn btn-default">Login</a>
                <a href="~/Views/Account/Signup" class="btn btn-default">SignUp</a>
            }
              
            <a href="~/Views/User/Index" class="btn btn-default">Users</a>
            <a href="~/Views/Award/Index" class="btn btn-default">awards</a>
        </div>
    </header>
    @RenderBody()
</body>
</html>
